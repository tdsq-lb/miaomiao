.index-swiper {
  margin: 20rpx;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.index-swiper image {
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}

.index-tab {
  display: flex;
}

.index-tab view {
  flex: 1;
  text-align: center;
  padding: 10rpx;
  margin: 10rpx;
}

.index-tab view.active {
  border-bottom: 1px red solid;
  color: red;
}

.index-list {
  display: flex;
  flex-wrap: wrap;
  color: hotpink;
}

.index-list-item {
  width: 50%;
  margin: 10rpx 0;
}

.index-list-item image {
  width: 90%;
  height: 250rpx;
  margin: 0 auto;
  display: block;
  border-radius: 10rpx;
}

.index-list-text {
  width: 90%;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  margin-top: 10rpx;
  font-size: 26rpx;
}

.user {
  padding: 10rpx;
  box-sizing: border-box;
  width: 100%;
}

.user-info {
  height: 150rpx;
  border: 1px #b4b5b6 solid;
  border-left: none;
  border-right: none;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.user-info image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-info text {
  margin-left: 20rpx;
}

.user-list{
  margin-top: 40rpx;
}
.user-list-item{
  height: 70rpx;
  border-bottom: 1px #b4b5b6 dashed;
  padding: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}